.rate
  &__container
    background: #F2F2F2
    border-radius: 0 @sm 64px
    width: 100%
    max-width: 600px
    box: vertical center middle @sm horizontal center space-between 
    padding: 16px 35px

  &__text 
    margin: 0
    color: $text-secondary

  &__scale
    box: horizontal center space-between

    &-item
      size: 32px
      background-color: #ffffff
      color: $text-secondary-light
      border-radius: 50%
      box: center middle
      margin-left: 8px
