.pub-reviews
  &__link
    color: inherit
    display: block
    padding: 20px @md 28px 30px
    height: 100%
    background-color: #f2f2f2 @lg transparent

    &:hover, &:active, &.active
      background-color: #f2f2f2

  &__title
    font-weight: 700
    margin: 0 0 8px 0
  
  &__text
    margin: 10px 0 0 0

.article-bottom-link
  max-width: 100%
  text-align: center
  margin-top: 33px @md 3.5vw @xl 58px

.press-about
  background: url('../img/press/press-about-bg.png') no-repeat center top / 100%, linear-gradient(111.8deg, rgba(47, 128, 237) -31.32%, rgba(235, 87, 87) 138.52%)
  padding: 40px 0 60px @md 3.5vw 0 4vw @xl 56px 0 65px

  .section-title
    color: #fff
    margin-bottom: 24px @sm 2vw @lg 50px

  &__title
    font-weight: 700
    margin: 0 0 8px 0
  
  &__text
    margin: 10px 0 0 0

  &__link
    color: #fff
    display: block
    padding: 20px 20px 24px @lg 28px 30px
    border: 1px solid transparent
    height: 100%
    background-color: rgba(255, 255, 255, 0.1) @lg transparent 

    &:hover, &:active, &.active
      border-color: transparent @lg #fff

.press-kit
  background: linear-gradient(270deg, #EB5757 -26.35%, #2F80ED 121.32%)
  padding: 30px 0 @md 23px 0
  margin-bottom: 0 !important

  .container
    width: 100% @md 75%
    max-width: 910px

  &__wrap
    box: vertical middle center @lg horizontal middle left
    position: relative

  &__desc
    display: block @lg none @xl block
    margin-left: 0 @lg 50px
    opacity: .5
    color: #fff

  &__img
    background: resolve('press/press-kit.png')
    size: size('press/press-kit.png')
    position: absolute
    right: 0
    bottom: -23px
    display: none @lg block