.hero
  background: 
    linear-gradient(114.73deg, rgba(47, 128, 237, 0.2) 13.99%, rgba(235, 87, 87, 0.2) 90.71%),
    url('../img/hero-bg.jpg') center / cover
  height: 100vh

  .container
    height: 100%
    align-items: center

  &__content
    text-align: center
    color: #fff

    hgroup
      *
        margin-bottom: 10px

      h1
        font-size: responsive 30px 64px
        font-range: $sm-px $lg-px
        font-weight: 700

      h5
        font-weight: 400  